\begin{frame}{Previsão de demanda: monitoração do modelo}

    Definições:
    \begin{itemize}
        \item $\textrm{Erro}_i$ = $(D_i-P_i)$
        \item Erro acumulado (ErrAcu) = $\sum_i (D_i - P_i)$
            \begin{itemize}
                \item $D:$ Demanda real
                \item $P:$ Previsão da demanda
            \end{itemize}
    \end{itemize}
\end{frame}


\begin{frame}{Previsão de demanda: monitoração do modelo}

    Previsão de demanda usando suavização exponencial com $\alpha = 0.5$.


    \begin{center}
        \begin{tabular}{cccc} \hline
            $D_i$ & $P_i$ & $\textrm{Erro}_i$  & ErrAcu \\ \hline
               32 & 30.0 & 2.00 &  2.00  \\ 
               31 & 31.0 & 0.00 &   2.00   \\ 
               29 & 31.0 & -2.00 &  0.00  \\ 
               31 & 30.0 & 1.00 &   1.00  \\ 
               32 & 30.5 & 1.50 &   2.50  \\ \hline 
        \end{tabular}
    \end{center}



    \begin{itemize}
        \item $D_i:$ Demanda no periodo $i$
        \item $P_i (M_i):$ Previsão para o periodo $i$
        \item ErrAcu = Erro acumulado
    \end{itemize}
\end{frame}



\begin{frame}{Previsão de demanda: monitoração do modelo}

    Definições:
    \begin{itemize}
        \item Erro médio absoluto (MAD) -  \textit{Mean Absolute Deviation} = $(\sum_i |D_i - P_i)|)/n$
            \begin{itemize}
                \item $D:$ Demanda real
                \item $P:$ Previsão da demanda
                \item $n:$ Número de periodos considerados
            \end{itemize}
    \end{itemize}

\end{frame}



\begin{frame}{Previsão de demanda: monitoração do modelo}

    Previsão de demanda usando suavização exponencial com $\alpha = 0.5$.

    \begin{center}

        \begin{tabular}{ccccccc}\hline
            $D_i$ & $P_i$ & $\textrm{Erro}_i$ & ErrAcu & ErroAbs & ErroAbsAcu & MAD \\ \hline
               30 & \\ 
               32 & 30.0 & 2.00 & 2.00 & 2.0 & 2.0 & 2.0 \\ 
               31 & 31.0 & 0.00 &  2.00 & 0.0 & 2.0 & 1.0 \\ 
               29 & 31.0 & -2.00   & 0.00 & 2.0 & 4.0 & 1.3 \\ 
               31 & 30.0 & 1.00   & 1.00 & 1.0 & 5.0 & 1.3 \\ 
               32 & 30.5 & 1.50  & 2.50 & 1.5 & 6.5 & 1.3 \\ \hline
        \end{tabular}


    \end{center}

    \begin{itemize}
        \item ErroAbs : Erro absoluto
        \item ErroAbsAcu: Erro absoluto acumulado
        \item MAD: Erro médio absoluto  
    \end{itemize}
\end{frame}


